<%- include('partials/header') %>
  <!-- ////////////////////// Customer card///////////////////////// -->
  <section class="info container">
    <div class="Headings">
      <h3><%=leng.titles.editCard%>:</h3><br>
      <!-- <h4>Customer ID:</h4> <span>#IDNUMBERHERE</span> -->
    </div>


    <form action="/editCustomer/<%=customer._id%>" method="POST">
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <label for="firstNameInput"><%=leng.customer.firstName%></label>
          <input type="text" class="form-control "  id="firstNameInput" value="<%=customer.firstName%>"  name="firstNameInput" required>
        </div>
        <div class="col-md-4 mb-3">
          <label for="lastNameInput"><%=leng.customer.lastName%></label>
          <input type="text" class="form-control" id="lastNameInput" value="<%=customer.lastName%>" value="" name="lastNameInput" required>

        </div>
        <div class="col-md-4 mb-3">
          <label for="phoneNumberInput"><%=leng.customer.phoneNumber%></label>
          <input type="number" class="form-control " id="phoneNumberInput" value="<%=customer.phoneNumber%>" name="phoneNumberInput" required>

        </div>
      </div>

      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="emailInput"><%=leng.customer.email%></label>
          <input type="email" class="form-control " id="emailInput" value="<%=customer.email%>" name="emailInput" required>

        </div>
        <div class="col-md-3 mb-3">
          <label for="birthDayInput"><%=leng.customer.birthDay%></label>
          <input type="date" class="form-control " id="birthDayInput" value="<%=customer.birthDay%>" name="birthDayInput" required>

        </div>

      </div>

      <div class="form-group">
        <label for="remarksTextInput"><%=leng.customer.remark%></label>
        <textarea class="form-control" id="remarksTextInput" rows="3" placeholder="<%=customer.remark%>" name="remarksTextInput"><%=customer.remark%></textarea>
      </div>

      <button class="btn btn-primary" type="submit"><%=leng.titles.save%></button>
      <button type="button" class="btn btn-danger delBtn" name="Delete"><%=leng.titles.delete%></button>
    </form>

    <hr>
  </section>
  <section class="deleteBox container">
    <div class=" border border-danger delDiv">
      <h2><%=leng.titles.aresure%></h2><br>

      <button type="button" class="btn-lg btn-warning cancelBtn" name="Delete"><%=leng.titles.cancel%></button>
<form class="" action="/deleteCustomer/<%=customer._id%>" method="post">
  <button type="submit" class="btn-lg btn-danger delBtn2 " name="Delete"><%=leng.titles.delete%></button>
</form>
    </div>
  </section>


<%- include('partials/footer') %>
