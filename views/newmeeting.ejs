<%- include('partials/header') %>
<!-- ////////////////////// Customer card///////////////////////// -->
<section class="info container">
  <div class="Headings">
    <h3><%=leng.titles.addNewMeeting%>:</h3><br>
    <h4><%=leng.customer.customerName%>:</h4> <span><%=customer.firstName%> <%=customer.lastName%></span>
  </div>


  <form action="/newmeeting/add/<%=customer._id%>" method="post">

    <div class="form-row">
      <div class="col-md-6 mb-3">
        <label for="meetingTitleInput"><%=leng.titles.meetingSubject%></label>
        <input type="text" class="form-control " id="meetingTitleInput" placeholder="" name="title" required>

      </div>
      <div class="col-md-3 mb-3">
        <label for="meetingDateInput"><%=leng.titles.meetingDate%>:</label>
        <input type="date" class="form-control " id="meetingDateInput" placeholder="Date" name="date" required>

      </div>

    </div>

    <div class="form-group">
      <label for="meetingInput"><%=leng.titles.meetingBody%>:</label>
      <textarea class="form-control" id="meetingInput" name="input" rows="3"></textarea>
    </div>
    <hr>

<button class="btn btn-success addLink" type="button" name="button"><%=leng.titles.addLink%></button>


    <button class="btn btn-primary saveMeet" type="submit"><%=leng.titles.save%></button>
  </form>
  <hr>
</section>



<%- include('partials/footer') %>
