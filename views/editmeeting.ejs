<%- include('partials/header') %>
  <!-- ////////////////////// Customer card///////////////////////// -->
  <section class="info container">
    <div class="Headings">
      <h3>Edit meeting:</h3><br>
      <h4>ID:</h4> <span><%=meeting.mettingId%>"</span>
    </div>


    <form action="/customer/<%=customer._id%>/editmeeting/<%=meeting.mettingId%>" method="post">

      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="meetingTitleInput">Title</label>
          <input type="text" class="form-control " id="meetingTitleInput" value="<%=meeting.title%>" name="title" required>

        </div>
        <div class="col-md-3 mb-3">
          <label for="meetingDateInput">Date:</label>
          <input type="date" class="form-control " id="meetingDateInput" value="<%=meeting.date%>" name="date" required>

        </div>

      </div>

      <div class="form-group">
        <label for="meetingInput">Subject:</label>
        <textarea class="form-control" id="meetingInput" name="input"  rows="3"><%=meeting.content%></textarea>
      </div>

      <button class="btn btn-primary" type="submit">Enter Changes</button>
      <button type="button" class="btn btn-danger delBtn" name="Delete">Delete</button>
    </form>
    <hr>
  </section>
</section>
<section class="deleteBox container">
  <div class=" border border-danger delDiv">
    <h2>Are You Sure?</h2><br>

    <button type="button" class="btn-lg btn-warning cancelBtn" name="Delete">Cancel</button>
<form class="" action="/customer/<%=customer._id%>/deleteMeeting/<%=meeting.mettingId%>" method="post">
<button type="submit" class="btn-lg btn-danger delBtn2 " name="Delete">Delete</button>
</form>
  </div>
</section>



<%- include('partials/footer') %>
